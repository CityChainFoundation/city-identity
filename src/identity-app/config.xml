<?xml version='1.0' encoding='utf-8'?>
<widget id="org.city-chain.identity" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>City Chain Identity</name>
    <description>
        App to keep your identity, for profile validation, access to tickets, signing and more.
    </description>
    <author email="labs@city-chain.org" href="https://www.city-chain.org">
        City Chain Labs
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="www/assets/blockcore-512x512.png" />
</widget>
